{% extends 'base.html.twig' %}

{% block title %}Gite à louer{% endblock %}

{% block body %}
    <h1 class="mt-3">Nos différents gite</h1>

<div class="row row-cols-1 row-cols-md-2">
    {% for gite in gite  %}
        <div class="col mb-4">
            <div class="card">
                {% if gite.imageGite %}
                    <img src="{{ asset('/uploads/' ~ gite.imageGite.name) | imagine_filter('thumb')}}" class="card-img-top" alt="...">
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ gite.name }}</h5>
                    <p class="card-text">{{ gite.description }}</p>
                    <a href="{{ path('gite_show', {id: gite.id}) }}" class="btn btn-primary">En savoir plus</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
