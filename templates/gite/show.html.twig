{% extends 'base.html.twig' %}

{% block title gite.name %}

{% block body %}

    <h1>coucou</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                {% if gite.imageGites|length > 1 %}
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for imageGites in gite.imageGites %}
                                <div class=" {% if loop.first %} carousel-item active {% else %} carousel-item {% endif %}">
                                    <img src="{{ asset('/uploads/' ~ imageGites.name) | imagine_filter('medium') }}"
                                         alt=""
                                         class=" d-block w-100">
                                </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                {% else %}
                    <div>
                        <img src="{{ asset('/uploads/' ~ gite.imageGite.name) | imagine_filter('medium') }}" alt=""
                             class=" d-block w-100">
                    </div>
                {% endif %}
            </div>


            <div class="col-md-4">
                <h1>{{ gite.name }}</h1>
                <h2>{{ gite.chambres }} chambres - {{ gite.surface }} m2</h2>
                <div class="text-primary" style="font-size: 4em; font-weight: bold">{{ gite.price }}â‚¬</div>

                <button type="button" class="mt-4 btn btn-primary ">
                    Contacter l'agence
                </button>
                <a href=""
                   class="mt-4 btn btn-primary pull-right">Imprimer le PDF
                </a>
            </div>
        </div>
    </div>
{% endblock %}