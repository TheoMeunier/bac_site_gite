{% extends 'base.html.twig' %}

{% block title %}Blog
{% endblock %}

{% block body %}

	<div class="mt-5">
		{{ include('_flashes.html.twig') }}
	</div>

	<div class="d-flex justify-content-center ">
		<h1>{{ blog.title }}</h1>
	</div>
	<div class="d-flex justify-content-center">
		<p>{{ blog.description }}</p>
	</div>

	<div class="d-flex justify-content-center">
		{% if blog.imageBlogs|length > 1 %}
			<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
				<div class="carousel-inner">
					{% for imageBlogs in blog.imageBlogs %}
						<div class=" {% if loop.first %} carousel-item active {% else %} carousel-item {% endif %}">
							<img src="{{ asset('/uploads/' ~ imageBlogs.name) | imagine_filter('medium') }}" alt="" class=" d-block w-100">
						</div>
					{% endfor %}
				</div>
				<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>

		{% else %}
			<div>
				<img src="{{ asset('/uploads/' ~ blog.imageBlog.name)}}" style="width: 100%; height: auto" alt="" class=" d-block w-100">
			</div>
		{% endif %}
	</div>

	<div class="d-flex justify-content-center">
		<p>{{ blog.article }}</p>
	</div>

	<div class="mt-3">
		<h1>Commentaires</h1>
		{% if blog.commentBlogs|length == 0 %}
			<p class="card-test text-center">Voulez vous mettre un commentaire ?</p>
		{% else %}
			{% for commentBlog in blog.commentBlogs %}
				<div class="card mt-2">
					<div class="card-body">
						<h4>{{ commentBlog.user.speudo }}</h4>
						<p class="card-test">{{ commentBlog.commentaire }}</p>
					</div>
				</div>
			{% endfor %}
		{% endif %}

		<div class="mb-5 mt-3">
			{{ form_start(form) }}
			{{ form_row(form.commentaire) }}
			<button class="btn btn-primary">Enregistrer</button>
			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
