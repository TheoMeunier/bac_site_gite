{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <h1 class="mt-3">Nos articles</h1>

    <div class="mt-4">
        {% for blog in blog %}
            <div class="row">
                <div class="col-md-8">
                    {% if blog.imageBlog %}
                        <img src="{{ asset('/uploads/' ~ blog.imageBlog.name ) | imagine_filter('thumb') }}"
                             class="card-img-top" alt="...">
                    {% endif %}
                </div>
                <div class="col">
                    <div class="col-md-4"><h1>{{ blog.title }}</h1></div>
                    <div class="col-md-4">
                        <p>{{ blog.description }}</p>
                    </div>
                    <div class="col-mb-8">
                        <a href="" class="btn btn-primary"> En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
