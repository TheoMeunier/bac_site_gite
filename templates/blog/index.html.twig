{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <h1 class="mt-3">Nos articles</h1>

    <div class=" mb-3 " style="max-width: 1000px; height: 400px">
        {% for blog in blog %}
            <div class="row no-gutters d-flex align-items-end">
                <div class="col-md-4">
                    {% if blog.imageBlog %}
                        <img src="{{ asset('/uploads/' ~ blog.imageBlog.name ) | imagine_filter('medium') }}"
                             class="card-img-top" alt="{{ blog.title }}">
                    {% endif %}
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ blog.title }}</h5>
                        <p class="card-text">T{{ blog.description }} Lorem ipsum dolor sit amet, consectetur adipisicing
                            elit. Accusamus dolor ex explicabo id, iusto minima molestias nisi non odio odit officia
                            perspiciatis possimus praesentium quia tempora ullam voluptate, voluptatum? Dignissimos!</p>
                        <a href="{{ path('blog_show', {id: blog.id})}}" class="btn btn-primary"> En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
