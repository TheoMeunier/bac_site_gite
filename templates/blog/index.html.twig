{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1 class="mt-3">Nos articles</h1>

    <div class=" mb-5 mt-3" style="max-width: 1000px">
        {% for blog in blog %}
            <div class="row no-gutters d-flex align-items-end">
                <div class="col-md-4 ">
                    {% if blog.imageBlog %}
                        <img src="{{ asset('/uploads/' ~ blog.imageBlog.name ) }}"
                             class="card-img-top d-flex justify-content-center" alt="{{ blog.title }}" style="width: 250px; height: auto">
                    {% endif %}
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ blog.title }}</h5>
                        <p class="card-text">T{{ blog.description }} </p>
                        <a href="{{ path('blog_show', {id: blog.id})}}" class="btn btn-primary"> En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
