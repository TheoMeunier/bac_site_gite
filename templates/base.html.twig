<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Gite à louer{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.3.0/main.min.css"
          integrity="sha256-uq9PNlMzB+1h01Ij9cx7zeE2OR2pLAfRw3uUUOOPKdA=" crossorigin="anonymous">
    {{ encore_entry_link_tags('app') }}


</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('home') }}">Accueil<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('gite') }}">Nos Gite</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('blog') }}">Notre Blog</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('contact') }}">Nous contacter</a>
            </li>
        </ul>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% if is_granted('ROLE_ADMIN') %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="{{ path('admin_home') }}" class="nav-link">Administration</a>
                    </li>
                </ul>
            {% endif %}
            {% if is_granted('ROLE_USER') %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="{{ path('compte',  {id: app.user.id}) }}" class="nav-link">Mon profil</a>
                    </li>
                </ul>
            {% endif %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_logout') }}" class="nav-link">Se déconnecter</a>
                </li>
            </ul>
        {% else %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_login') }}" class="nav-link">Se connecter</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_register') }}" class="nav-link">Crée un compte</a>
                </li>
            </ul>
        {% endif %}
    </div>
</nav>
<div class="container">
    {% block body %}{% endblock %}
</div>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.3.0/main.min.js"
        integrity="sha256-DBxkGZLxKsLKhz054qUpBqtotG00r9AELGpSigJujLg=" crossorigin="anonymous"></script>
{{ encore_entry_script_tags('app') }}
</body>
</html>
